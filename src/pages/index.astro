<style>
/* ===========================================
   HERO SECTION - FULL WIDTH LAYOUT
   ========================================== */
.hero-section {
	padding: 0;
	width: 100vw;
	position: relative; /* Background overlay için gerekli */
	left: 50%;
	right: 50%;
	margin-left: -50vw;
	margin-right: -50vw;
	z-index: 1; /* Site background overlay'in üzerinde */
	height: 100vh; /* Hero section yüksekliği */
	min-height: 600px; /* Minimum yükseklik */
}

.hero-grid {
	display: grid;
	grid-template-columns: 1fr 1fr; /* Eşit bölüm ama gap ile ayrılacak */
	gap: 20px; /* Sol görsel ile sağ içerik arası 20px */
	min-height: clamp(600px, 70vh, 900px); /* Responsive minimum height - content'e göre ayarlandı */
	align-items: stretch; /* Her iki column da aynı yükseklikte */
}

/* Hero Image - Sol Yarı */
.hero-image-container {
	position: relative;
	width: 100%;
	height: auto; /* Tablet'te otomatik height */
	min-height: clamp(400px, 50vh, 600px); /* Tablet responsive minimum height */
	display: flex;
	align-items: center;
	justify-content: center;
}

.hero-main-image {
	width: 100%;
	height: 100%; /* Container'ın tam yüksekliği */
	object-fit: cover; /* Görseli container'a uygun şekilde kes/sığdır */
	object-position: center; /* Görseli merkeze hizala */
	border-radius: 12px;
	/* Hafif gölge efekti */
	box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
}

/* Hero Content - Sağ Yarı */
.hero-content {
	height: auto; /* Tablet'te otomatik height */
	padding: clamp(15px, 3vw, 25px) 0; /* Responsive padding */
	align-items: flex-start; /* Tablet'te üst hizalama */
}

.hero-content-inner {
	max-width: clamp(600px, 50vw, 835px); /* Responsive max-width */
	width: 100%;
	display: flex;
	flex-direction: column;
	gap: clamp(30px, 4vw, 50px); /* Responsive gap */
	/* justify-content: center kaldırıldı - artık flex-start hizalaması */
}

.hero-text-section {
	display: flex;
	flex-direction: column;
	gap: 30px;
}

.hero-subtitle {
	margin: 0; /* Margin sıfırlandı */
}

.hero-description {
	font-size: 20px; /* Font boyutu aynı kaldı */
	line-height: 1.5; /* Satır aralığı genişletildi */
	color: var(--color-white);
	margin: 0;
	font-weight: 500; /* Medium font weight - h5 için uygun */
}

/* Hero Product Cards */
.hero-product-cards {
	display: flex;
	flex-direction: row; /* Yan yana dizilim */
	gap: clamp(150px, 12vw, 210px); /* Responsive gap - ekran boyutuna göre ayarlanır */
	justify-content: flex-start; /* Sol tarafa hizalı */
	/* Arka plan kaldırıldı - kartların kendilerine uygulanacak */
}

.hero-product-card {
	position: relative;
	flex: 1;
	max-width: clamp(240px, 20vw, 280px);
	min-width: 200px;
}

.product-card-bg {
	width: 100%; /* Parent'a göre tam genişlik */
	height: clamp(300px, 25vw, 400px); /* Responsive height */
	/* Ana yeşil renk #6BE03F tek renk - gradient değil */
	background: #6BE03F; /* Tek renk arka plan */
	/* Çeltikli köşe efekti - sağ üst diagonal cut */
	clip-path: polygon(
		0% 0%,        /* Sol üst */
		85% 0%,       /* Sağ üst - kesik başlangıcı */
		100% 15%,     /* Sağ üst çeltik noktası */
		100% 100%,    /* Sağ alt */
		0% 100%       /* Sol alt */
	);
	border-radius: 8px 0 8px 8px; /* Sol köşeler yuvarlanır, sağ üst kesik */
	position: relative;
	overflow: hidden;
	/* Modern gölge ve depth efektleri - ana yeşil tonlarında */
	box-shadow: 
		0 4px 20px rgba(107, 224, 63, 0.25),
		inset 0 1px 0 rgba(255, 255, 255, 0.15);
	/* Subtle texture efekti */
	background-image: 
		radial-gradient(circle at 25% 25%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
		radial-gradient(circle at 75% 75%, rgba(0, 0, 0, 0.05) 0%, transparent 50%);
	/* Smooth transitions - sadece transform için */
	transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Hover efekti */
.hero-product-card:hover .product-card-bg {
	transform: translateY(-2px);
}

/* Large screens (27" vs 14" uyumu için) */
@media screen and (min-width: 1440px) {
	.product-card-bg {
		/* Eski PNG ayarları kaldırıldı - CSS gradient otomatik responsive */
		/* Çeltik köşesi büyük ekranlarda biraz daha belirgin */
		clip-path: polygon(
			0% 0%,        
			82% 0%,       /* Daha geniş çeltik */
			100% 18%,     
			100% 100%,    
			0% 100%       
		);
	}
	
	.hero-product-cards {
		gap: 200px; /* Büyük ekranlarda daha geniş gap */
	}
}

/* Ultra wide screens */
@media screen and (min-width: 1920px) {
	.product-card-bg {
		/* Ultra geniş ekranlarda çeltik daha dramatik */
		clip-path: polygon(
			0% 0%,        
			80% 0%,       
			100% 20%,     
			100% 100%,    
			0% 100%       
		);
	}
	
	.hero-product-cards {
		gap: clamp(200px, 15vw, 250px);
	}
}

/* Laptop screens (MacBook Pro 14" uyumu) */
@media screen and (min-width: 1200px) and (max-width: 1439px) {
	.product-card-bg {
		/* Laptop ekranlarda optimized çeltik */
		height: clamp(280px, 22vw, 350px);
		clip-path: polygon(
			0% 0%,        
			87% 0%,       /* Daha ince çeltik */
			100% 13%,     
			100% 100%,    
			0% 100%       
		);
	}
	
	.hero-product-cards {
		gap: clamp(120px, 10vw, 180px);
	}
	
	.product-card {
		max-width: clamp(200px, 18vw, 250px);
	}
}

.product-icon {
	width: clamp(70px, 6vw, 94px); /* Responsive icon boyutu */
	height: clamp(70px, 6vw, 94px);
	background: rgba(255,255,255,0.2);
	border-radius: 8px;
	position: absolute;
	top: clamp(12px, 1.5vw, 17px); /* Responsive top position */
	left: clamp(20px, 2vw, 27px); /* Responsive left position */
	display: flex;
	align-items: center;
	justify-content: center;
}

.icon-svg {
	width: clamp(35px, 3.5vw, 50px); /* Responsive SVG boyutu */
	height: clamp(35px, 3.5vw, 50px);
	object-fit: contain;
}

.product-content {
	position: absolute;
	left: clamp(20px, 2vw, 27px); /* Icon ile aynı hizada */
	top: clamp(100px, 8vw, 130px); /* Responsive top position */
}

.product-title {
	color: var(--color-white);
	margin-bottom: clamp(15px, 1.5vw, 20px); /* Responsive margin */
	font-weight: 600;
	font-size: clamp(18px, 1.8vw, 22px); /* Responsive font */
	line-height: 1.3;
}

.product-description {
	color: #0D0D12; /* Siyah renk */
	font-size: clamp(12px, 1.2vw, 15px); /* Responsive font */
	font-weight: 600; /* Daha kalın font */
	line-height: 1.6;
	max-width: clamp(180px, 15vw, 220px); /* Responsive max-width */
}

/* Hero İncele Button */
.hero-incele-button {
	display: flex;
	justify-content: center; /* İki kart arasında ortalı */
	width: 100%; /* Tam genişlik kullan */
	margin-top: clamp(25px, 3vw, 40px); /* Responsive margin */
}

.incele-btn {
	position: relative;
	display: inline-flex;
	align-items: center;
	justify-content: center;
	width: 110px;
	height: 36px;
	background-color: #FFFFFF; /* Beyaz arka plan */
	color: #6BE03F; /* Yeşil yazı rengi */
	border: none;
	font-family: 'GeneralSans-Bold', sans-serif;
	font-weight: 700;
	font-size: 16px;
	text-decoration: none;
	cursor: pointer;
	transition: all 0.3s ease;
	/* Sol üst köşe çeltikli efekt */
	clip-path: polygon(0 0, 100% 0, 100% 80%, 90% 100%, 0 100%);
}

.incele-btn:hover {
	background-color: #6BE03F;
	color: #FFFFFF;
	transform: translateY(-2px);
}

