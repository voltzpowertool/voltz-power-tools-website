/* Slider Container */
.product-slider-container {
	position: relative;
	width: 400px; /* Desktop */
	height: 500px; /* Desktop */
	overflow: hidden;
	border-radius: 20px !important; /* Desktop */
	cursor: grab;
	user-select: none;
	z-index: 2;
	/* Force border-radius clipping */
	-webkit-clip-path: inset(0 round 20px);
	clip-path: inset(0 round 20px);
}

.product-slider-container:hover {
	box-shadow: 0 4px 20px rgba(68, 214, 44, 0.2);
	/* transform: translateY(-2px); KALDIRILDI - Yukarı hareket engellendi */
	transition: box-shadow 0.3s ease; /* Sadece gölge efekti */
}

.product-slider-track {
	display: flex;
	width: 1200px; /* 3 cards × 400px - Desktop */
	height: 100%;
	transition: transform 0.8s cubic-bezier(0.23, 1, 0.32, 1); /* Ultra smooth easing */
	will-change: transform; /* GPU acceleration */
	touch-action: pan-y pinch-zoom; /* Allow vertical scroll but enable horizontal drag */
	user-select: none; /* Prevent text selection during drag */
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	cursor: grab;
}

