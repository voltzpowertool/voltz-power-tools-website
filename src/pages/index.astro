<script>
// Products Filter and Slider Functionality
document.addEventListener('DOMContentLoaded', function() {
	const filterButtons = document.querySelectorAll('.filter-btn');
	const productsGrid = document.getElementById('productsGrid');
	const prevBtn = document.getElementById('prevBtn');
	const nextBtn = document.getElementById('nextBtn');
	
	// Boş elementleri temizle - sadece products section'ındaki kartlar
	function cleanEmptyElements() {
		const allCards = document.querySelectorAll('#productsGrid .product-card');
		const validCards = [];
		
		allCards.forEach(card => {
			const hasName = card.querySelector('.product-name');
			const hasCategory = card.getAttribute('data-category');
			
			if (hasName && hasCategory) {
				validCards.push(card);
			} else {
				card.remove();
			}
		});
		
		return validCards;
	}
	
	const allProducts = cleanEmptyElements();
	
	let currentSlide = 0;
	let visibleProducts = [];
	let productsPerSlide = 4;
	
	function filterProducts(category) {
		allProducts.forEach(product => {
			product.style.display = 'none';
			product.style.opacity = '0';
		});
		
		visibleProducts = [];
		
		allProducts.forEach(product => {
			const productCategory = product.getAttribute('data-category');
			
			if (category === 'all' || productCategory === category) {
				visibleProducts.push(product);
			}
		});
		
		currentSlide = 0;
		updateSlider();
	}
	
	function updateSlider() {
		const maxSlides = Math.ceil(visibleProducts.length / productsPerSlide);
		
		visibleProducts.forEach((product, index) => {
			const slideIndex = Math.floor(index / productsPerSlide);
			if (slideIndex === currentSlide) {
				product.style.display = 'block';
				product.style.opacity = '1';
			} else {
				product.style.display = 'none';
				product.style.opacity = '0';
			}
		});
		
		prevBtn.disabled = currentSlide === 0;
		nextBtn.disabled = currentSlide >= maxSlides - 1;
		
		prevBtn.style.visibility = 'visible';
		prevBtn.style.opacity = '1';
		nextBtn.style.visibility = 'visible';
		nextBtn.style.opacity = '1';
	}
	
	filterButtons.forEach(button => {
		button.addEventListener('click', () => {
			filterButtons.forEach(btn => btn.classList.remove('active'));
			button.classList.add('active');
			
			const category = button.getAttribute('data-filter');
			filterProducts(category);
		});
	});
	
	prevBtn.addEventListener('click', () => {
		if (currentSlide > 0) {
			currentSlide--;
			updateSlider();
		}
	});
	
	nextBtn.addEventListener('click', () => {
		const maxSlides = Math.ceil(visibleProducts.length / productsPerSlide);
		if (currentSlide < maxSlides - 1) {
			currentSlide++;
			updateSlider();
		}
	});
	
	window.addEventListener('resize', () => {
		forceGridLayout();
		updateSlider();
	});
	
	function forceGridLayout() {
		const windowWidth = window.innerWidth;
		
		if (windowWidth > 1200) {
			productsPerSlide = 4;
			productsGrid.style.setProperty('grid-template-columns', 'repeat(4, 1fr)', 'important');
			productsGrid.style.setProperty('max-width', '1539px', 'important');
		} else if (windowWidth > 768) {
			productsPerSlide = 2;
			productsGrid.style.setProperty('grid-template-columns', 'repeat(2, 1fr)', 'important');
			productsGrid.style.setProperty('max-width', '800px', 'important');
		} else {
			productsPerSlide = 1;
			productsGrid.style.setProperty('grid-template-columns', '1fr', 'important');
			productsGrid.style.setProperty('max-width', '400px', 'important');
		}
	}
	
	forceGridLayout();
	filterProducts('all');
	
	filterButtons.forEach(btn => btn.classList.remove('active'));
	document.querySelector('[data-filter="all"]').classList.add('active');
});

// About Product Slider - Separate DOMContentLoaded listener  
document.addEventListener('DOMContentLoaded', function() {
		// Wait a bit more to ensure all elements are rendered
	setTimeout(() => {
		const sliderTrack = document.querySelector('.product-slider-track');
		const dots = document.querySelectorAll('.slider-dots .dot');
		const productCards = document.querySelectorAll('.about-product-card');

	if (!sliderTrack) {
		return;
	}
	
	if (!dots.length) {
		return;
	}
	
	if (!productCards.length) {
		return;
	}
	
	let currentSlideIndex = 0;
	const totalSlides = productCards.length;
	let autoPlayInterval = null;
	let isTransitioning = false;
	
	function getCardWidth() {
		const screenWidth = window.innerWidth;
		if (screenWidth <= 768) return 300; // Mobile
		if (screenWidth <= 1200) return 350; // Tablet
		return 400; // Desktop
	}
	
	function updateSlider(slideIndex, force = false) {
		if (isTransitioning && !force) return;
		
		// Geçerli slide index kontrolü
		if (slideIndex < 0 || slideIndex >= totalSlides) return;
		
		isTransitioning = true;
		currentSlideIndex = slideIndex;
		
		// Slider'ı hareket ettir
		const cardWidth = getCardWidth();
		const translateX = -(slideIndex * cardWidth);
		sliderTrack.style.transform = `translateX(${translateX}px)`;
		
		// Active state'leri güncelle - önce tümünü temizle
		productCards.forEach((card) => {
			card.classList.remove('active');
		});
		
		dots.forEach((dot) => {
			dot.classList.remove('active');
		});
		
		// Sonra sadece seçilen index'e active ekle
		if (productCards[slideIndex]) {
			productCards[slideIndex].classList.add('active');
		}
		
		if (dots[slideIndex]) {
			dots[slideIndex].classList.add('active');
	
		}
		
		// Transition bitiminde flag'i sıfırla
		setTimeout(() => {
			isTransitioning = false;
		}, 800); // CSS transition süresi ile aynı (0.8s)
	}
	
	function startAutoPlay() {
		stopAutoPlay();
		autoPlayInterval = setInterval(() => {
			const nextIndex = (currentSlideIndex + 1) % totalSlides;
			updateSlider(nextIndex);
		}, 5000); // Biraz daha uzun süre - daha rahat
	}
	
	function stopAutoPlay() {
		if (autoPlayInterval) {
			clearInterval(autoPlayInterval);
			autoPlayInterval = null;
		}
	}
	
	// Dot navigation events
	dots.forEach((dot, index) => {
		dot.addEventListener('click', (e) => {
			e.preventDefault();
			e.stopPropagation();

			stopAutoPlay();
			updateSlider(index, true); // Force update

			// Auto-play'i yeniden başlat
			setTimeout(() => {
				startAutoPlay();
			}, 1000);
		});
	});
	
	// Hover events
	const sliderContainer = document.querySelector('.product-slider-container');
	if (sliderContainer) {
		sliderContainer.addEventListener('mouseenter', stopAutoPlay);
		sliderContainer.addEventListener('mouseleave', startAutoPlay);
	}
	
	// Touch/Swipe events for manual sliding
	let startX = 0;
	let startY = 0;
	let currentX = 0;
	let currentY = 0;
	let isSwping = false;
	let isDragging = false;
	
	if (sliderTrack) {
		// Touch start
		sliderTrack.addEventListener('touchstart', (e) => {
			startX = e.touches[0].clientX;
			startY = e.touches[0].clientY;
			isSwping = true;
			isDragging = false;
			stopAutoPlay();
		}, { passive: true });
		
		// Touch move
		sliderTrack.addEventListener('touchmove', (e) => {
			if (!isSwping) return;
			
			currentX = e.touches[0].clientX;
			currentY = e.touches[0].clientY;
			
			const diffX = startX - currentX;
			const diffY = startY - currentY;
			
			// Check if horizontal swipe (not vertical scroll)
			if (Math.abs(diffX) > Math.abs(diffY) && Math.abs(diffX) > 10) {
				isDragging = true;
				e.preventDefault(); // Prevent page scroll
			}
		}, { passive: false });
		
		// Touch end
		sliderTrack.addEventListener('touchend', () => {
			if (isSwping && isDragging) {
				const diffX = startX - currentX;
				const threshold = 50; // Minimum swipe distance
				
				if (Math.abs(diffX) > threshold) {
					if (diffX > 0) {
						// Swipe left - next slide
						const nextIndex = Math.min(currentSlideIndex + 1, totalSlides - 1);
			
						updateSlider(nextIndex, true);
					} else {
						// Swipe right - previous slide
						const prevIndex = Math.max(currentSlideIndex - 1, 0);

						updateSlider(prevIndex, true);
					}
				}
			}
			
			// Reset flags
			isSwping = false;
			isDragging = false;
			
			// Resume auto-play after delay
			setTimeout(() => {
				startAutoPlay();
			}, 1500);
		}, { passive: true });
		
		// Mouse drag events for desktop
		let isMouseDown = false;
		let mouseStartX = 0;
		
		sliderTrack.addEventListener('mousedown', (e) => {
			isMouseDown = true;
			mouseStartX = e.clientX;
			stopAutoPlay();
			sliderTrack.style.cursor = 'grabbing';
		});
		
		sliderTrack.addEventListener('mousemove', (e) => {
			if (!isMouseDown) return;
			
			const diffX = mouseStartX - e.clientX;
			if (Math.abs(diffX) > 10) {
				e.preventDefault();
			}
		});
		
		sliderTrack.addEventListener('mouseup', (e) => {
			if (!isMouseDown) return;
			
			const diffX = mouseStartX - e.clientX;
			const threshold = 50;
			
			if (Math.abs(diffX) > threshold) {
				if (diffX > 0) {
					// Drag left - next slide
					const nextIndex = Math.min(currentSlideIndex + 1, totalSlides - 1);
					
					updateSlider(nextIndex, true);
				} else {
					// Drag right - previous slide
					const prevIndex = Math.max(currentSlideIndex - 1, 0);

					updateSlider(prevIndex, true);
				}
			}
			
			isMouseDown = false;
			sliderTrack.style.cursor = 'grab';
			
			// Resume auto-play after delay
			setTimeout(() => {
				startAutoPlay();
			}, 1500);
		});
		
		sliderTrack.addEventListener('mouseleave', () => {
			if (isMouseDown) {
				isMouseDown = false;
				sliderTrack.style.cursor = 'grab';
			}
		});
		
		// Set initial cursor
		sliderTrack.style.cursor = 'grab';
	}
	
	// Keyboard navigation
	document.addEventListener('keydown', (e) => {
		if (e.key === 'ArrowLeft') {
			const prevIndex = Math.max(currentSlideIndex - 1, 0);
			
			stopAutoPlay();
			updateSlider(prevIndex, true);
			setTimeout(() => startAutoPlay(), 2000);
		} else if (e.key === 'ArrowRight') {
			const nextIndex = Math.min(currentSlideIndex + 1, totalSlides - 1);

			stopAutoPlay();
			updateSlider(nextIndex, true);
			setTimeout(() => startAutoPlay(), 2000);
		}
	});
	
	// Resize event
	let resizeTimeout;
	window.addEventListener('resize', () => {
		clearTimeout(resizeTimeout);
		resizeTimeout = setTimeout(() => {
			updateSlider(currentSlideIndex, true);
		}, 100);
	});
	
		// Initialize - elements should be available now
		
		updateSlider(0, true);
		startAutoPlay();
	}, 200); // Delay to ensure DOM is fully rendered
});
