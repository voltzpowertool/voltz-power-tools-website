		`;

		option.addEventListener('click', function() {
			const value = this.getAttribute('data-value');
			const text = this.textContent;

			// Update button text
			document.querySelector('.mobile-subject-text').textContent = text;

			// Update hidden select
			const hiddenSelect = document.getElementById('hiddenSubject');
			hiddenSelect.value = value;

			// Trigger change event for form validation
			hiddenSelect.dispatchEvent(new Event('change'));

			closeMobileSubjectModal();
		});

		option.addEventListener('mouseover', function() {
			this.style.backgroundColor = 'rgba(107, 224, 63, 0.1) !important';
		});

		option.addEventListener('mouseout', function() {
			this.style.backgroundColor = 'transparent !important';
		});
