					width: 100% !important;
					padding: 15px 20px !important;
					margin: 5px 0 !important;
					background: transparent !important;
					border: 1px solid #333 !important;
					border-radius: 8px !important;
					color: white !important;
					font-family: 'GeneralSans-Semibold', sans-serif !important;
					font-size: 14px !important;
					text-align: left !important;
					cursor: pointer !important;
					transition: all 0.3s ease !important;
				`;
				
				if (option.classList.contains('active')) {
					option.style.cssText += `
						background: #6BE03F !important;
						color: #070707 !important;
						border-color: #6BE03F !important;
					`;
				}
			});
			
			document.body.appendChild(modal);
			return modal;
		}

		// Open mobile filter modal
		function openMobileFilter() {
			// Only work on mobile
			if (window.innerWidth > 768) {
				return;
			}
			
			// Remove existing modal if any
			const existingModal = document.getElementById('mobileFilterModal');
			if (existingModal) {
				existingModal.remove();
			}
			
			// Create new modal
			const modal = createModal();
			
			// Add event listeners to new modal
			const closeBtn = modal.querySelector('.mobile-filter-close');
			const overlay = modal.querySelector('.mobile-filter-modal-overlay');
			const options = modal.querySelectorAll('.mobile-filter-option');
			
			if (closeBtn) {
				closeBtn.addEventListener('click', closeMobileFilter);
			}
			if (overlay) {
				overlay.addEventListener('click', closeMobileFilter);
			}
			
			options.forEach(option => {
				option.addEventListener('click', () => {
					handleMobileFilterSelection(option);
				});
				
				// Add hover effects
				option.addEventListener('mouseenter', () => {
					if (!option.classList.contains('active')) {
						option.style.background = 'rgba(107, 224, 63, 0.1) !important';
						option.style.borderColor = '#6BE03F !important';
					}
				});
				
				option.addEventListener('mouseleave', () => {
					if (!option.classList.contains('active')) {
						option.style.background = 'transparent !important';
						option.style.borderColor = '#333 !important';
					}
				});
			});
			
			if (mobileFilterBtn) {
				mobileFilterBtn.classList.add('active');
			}
			document.body.style.overflow = 'hidden';
		}

			// Close mobile filter modal
		function closeMobileFilter() {
			const modal = document.getElementById('mobileFilterModal');
			if (modal) {
				modal.remove();
			}
			if (mobileFilterBtn) {
				mobileFilterBtn.classList.remove('active');
			}
			document.body.style.overflow = '';
		}

	// Handle mobile filter selection
	function handleMobileFilterSelection(selectedOption) {
		const modal = document.getElementById('mobileFilterModal');
		if (!modal) return;
		
		// Remove active class from all options in current modal
		const allModalOptions = modal.querySelectorAll('.mobile-filter-option');
		allModalOptions.forEach(option => option.classList.remove('active'));
		
		// Add active class to selected option
		selectedOption.classList.add('active');
		
		// Update the selected text in button
		if (mobileFilterSelected) {
			mobileFilterSelected.textContent = selectedOption.textContent;
		}
		
		// Get filter value and apply filter
		const filterValue = selectedOption.getAttribute('data-filter');
		
		// Update desktop filters to match (for consistency)
		const filterButtons = document.querySelectorAll('.filter-btn');
		filterButtons.forEach(btn => btn.classList.remove('active'));
		const correspondingDesktopBtn = document.querySelector(`.filter-btn[data-filter="${filterValue}"]`);
		if (correspondingDesktopBtn) {
			correspondingDesktopBtn.classList.add('active');
		}
		
		// Apply the filter
		if (filterValue === 'all') {
			showAllProducts();
		} else {
			filterProducts(filterValue);
		}
		
		// Close modal
		closeMobileFilter();
	}

			// Event listeners for mobile filter
		if (mobileFilterBtn) {
			mobileFilterBtn.addEventListener('click', (e) => {
				e.preventDefault();
				e.stopPropagation();
				openMobileFilter();
			});
		}

			// Note: Close button and overlay listeners are now added dynamically in openMobileFilter

			// Close modal with ESC key
		document.addEventListener('keydown', (e) => {
			if (e.key === 'Escape') {
				const modal = document.getElementById('mobileFilterModal');
				if (modal) {
					closeMobileFilter();
				}
			}
		});

	}, 500); // End of setTimeout for mobile filter

	// Initialize - show all products
	showAllProducts();
});
