        </div>

        <!-- Copyright -->
        <div class="footer-copyright">
          <p>© 2025 Voltz Power Tools. Tüm hakları saklıdır.</p>
        </div>
      </div>
    </div>
  </div>
</footer>

</Layout>

<style>
/* V-PACK Page Styles */

/* Global Variables */
:root {
  --color-bg-dark: #070707;
  --color-white: #ffffff;
  --color-primary-green: #6BE03F;
  --color-light-green: #6BE03F;
}

/* Hero Section */
.vpack-hero-section {
  min-height: 100vh;
  background-color: #070707;
  position: relative;
  padding: 80px 0 80px 0;
  display: flex;
  align-items: center;
}

.site-background-overlay {
  position: absolute;
  top: 0;
  right: 0;
  width: 60vw;
  height: 100%;
  background-image: url('/img/sections/background-bg.png');
  background-size: auto 100%; /* Icon'un tam boyutunu korur */
  background-repeat: no-repeat;
  background-position: right center; /* Tutarlı pozisyon */
  opacity: 0.25; /* Diğer sayfalarla aynı opacity */
  z-index: 0; /* Diğer sayfalarla aynı z-index */
  pointer-events: none;
  mix-blend-mode: screen;
  filter: brightness(0.9) contrast(1.3);
}

/* Responsive Overlay Adjustments */
@media (max-width: 1200px) {
  .site-background-overlay {
    width: 70vw;
    opacity: 0.22;
    background-size: auto 90%; /* Tablet'te de boyut kontrolü */
    background-position: right center; /* Tutarlı pozisyon */
  }
}

@media (max-width: 768px) {
  .site-background-overlay {
    width: 80vw;
    opacity: 0.18;
    background-size: auto 80%; /* Mobile'da biraz küçült */
    background-position: right center; /* Tutarlı pozisyon */
  }
}

.container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 40px;
  position: relative;
  z-index: 2;
}

.vpack-hero-content {
  text-align: center;
  max-width: 800px;
  margin: 0 auto;
}

.vpack-logo-container {
  margin-bottom: 40px;
}

.vpack-logo-circle {
  width: 120px;
  height: 120px;
  background: linear-gradient(135deg, #6BE03F 0%, #4CAF50 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  box-shadow: 0 10px 30px rgba(107, 224, 63, 0.3);
}

.vpack-logo-img {
  height: 60px;
  width: auto;
  filter: brightness(0);
}

.vpack-main-title {
  font-family: 'GeneralSans-Bold', sans-serif;
  font-weight: 700;
  font-size: 72px;
  color: var(--color-white);
  margin-bottom: 30px;
  line-height: 1.1;
}

.vpack-brand {
  color: #6BE03F;
}

.vpack-hero-description {
  font-family: 'GeneralSans-Regular', sans-serif;
  font-size: 24px;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 50px;
  line-height: 1.4;
}

/* Progress Bar (Same as other pages) */
.progress-bar {
  display: flex;
  align-items: center;
  gap: 8px;
  justify-content: center;
  margin-bottom: 60px;
}

.progress-segment-left {
  width: 12px;
  height: 3px;
  background: var(--color-light-green);
  clip-path: polygon(0 0, 100% 0, 100% 100%, 10% 100%, 0 80%);
}

.progress-segment-2 {
  width: 16px;
  height: 3px;
  background: var(--color-light-green);
}

.progress-segment-3 {
  width: 12px;
  height: 3px;
  background: var(--color-light-green);
  clip-path: polygon(0 0, 100% 0, 100% 80%, 90% 100%, 0 100%);
}

/* Stats */
.vpack-stats {
  display: flex;
  justify-content: center;
  gap: 80px;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-family: 'GeneralSans-Bold', sans-serif;
  font-weight: 700;
  font-size: 48px;
  color: #6BE03F;
  margin-bottom: 10px;
}

.stat-label {
  font-family: 'GeneralSans-Regular', sans-serif;
  font-size: 16px;
  color: rgba(255, 255, 255, 0.7);
}

/* Benefits Section */
.vpack-benefits-section {
  padding: 100px 0;
  background-color: #070707;
}

.section-header {
  text-align: center;
  margin-bottom: 80px;
}

.section-title {
  font-family: 'GeneralSans-Bold', sans-serif;
  font-weight: 700;
  font-size: 48px;
  color: var(--color-white);
  margin-bottom: 30px;
}

.highlight-text {
  color: #6BE03F;
}

.section-description {
  font-family: 'GeneralSans-Regular', sans-serif;
  font-size: 18px;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 30px;
}

.benefits-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 40px;
}

.benefit-card {
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 20px;
  padding: 40px 30px;
  text-align: center;
  transition: all 0.3s ease;
}

.benefit-card:hover {
  transform: translateY(-5px);
  border-color: rgba(107, 224, 63, 0.3);
  box-shadow: 0 15px 35px rgba(107, 224, 63, 0.1);
}

.benefit-icon {
  font-size: 48px;
  margin-bottom: 25px;
}

.benefit-title {
  font-family: 'GeneralSans-Bold', sans-serif;
  font-weight: 700;
  font-size: 22px;
  color: var(--color-white);
  margin-bottom: 15px;
}

.benefit-description {
  font-family: 'GeneralSans-Regular', sans-serif;
  font-size: 16px;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.5;
}



/* CTA Section */
.vpack-cta-section {
  padding: 100px 0;
  background-color: #070707;
}

.vpack-cta {
  background: linear-gradient(135deg, rgba(107, 224, 63, 0.1) 0%, rgba(76, 175, 80, 0.1) 100%);
  border-radius: 20px;
  padding: 60px 40px;
  text-align: center;
}

.cta-title {
  font-family: 'GeneralSans-Bold', sans-serif;
  font-weight: 700;
  font-size: 36px;
  color: var(--color-white);
  margin-bottom: 15px;
}

.cta-description {
  font-family: 'GeneralSans-Regular', sans-serif;
  font-size: 18px;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 40px;
}

.cta-buttons {
  display: flex;
  gap: 20px;
  justify-content: center;
}

.btn-primary {
  background: linear-gradient(135deg, #6BE03F 0%, #4CAF50 100%);
  color: #070707;
  padding: 15px 30px;
  border-radius: 12px;
  text-decoration: none;
  font-family: 'GeneralSans-Bold', sans-serif;
  font-weight: 700;
  font-size: 16px;
  transition: all 0.3s ease;
  display: inline-block;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 25px rgba(107, 224, 63, 0.3);
}

.btn-secondary {
  background: transparent;
  color: #6BE03F;
  border: 2px solid #6BE03F;
  padding: 13px 28px;
  border-radius: 12px;
  text-decoration: none;
  font-family: 'GeneralSans-Bold', sans-serif;
  font-weight: 700;
  font-size: 16px;
  transition: all 0.3s ease;
  display: inline-block;
}

.btn-secondary:hover {
  background: #6BE03F;
  color: #070707;
  transform: translateY(-2px);
}

/* Footer Section - Index.astro'dan kopyalanan */
.footer-section {
  background: #6BE03F;
  padding: 60px 0 30px 0;
  margin-top: 100px;
}

.footer-content {
  display: flex;
  flex-direction: column;
  gap: 40px;
}

.footer-logo {
  text-align: center;
}

.footer-logo-img {
  height: 60px;
  width: auto;
}

.footer-main {
  display: flex;
  justify-content: space-between;
  gap: 60px;
}

.footer-company-title {
  font-family: 'GeneralSans-Bold', sans-serif;
  font-weight: 700;
  font-size: 24px;
  color: #070707;
  margin-bottom: 15px;
  text-align: left;
}

.footer-company-desc {
  font-family: 'GeneralSans-Regular', sans-serif;
  font-size: 16px;
  color: #070707;
  line-height: 1.5;
}

.footer-contact {
  display: flex;
  gap: 80px;
}

.footer-contact-title {
  font-family: 'GeneralSans-Semibold', sans-serif;
  font-weight: 600;
  font-size: 18px;
  color: #070707;
  margin-bottom: 15px;
}

.footer-contact-text {
  font-family: 'GeneralSans-Regular', sans-serif;
  font-size: 14px;
  color: #070707;
  line-height: 1.6;
}

.footer-link {
  color: #070707;
  text-decoration: none;
  transition: opacity 0.3s ease;
}

.footer-link:hover {
  opacity: 0.7;
}

.footer-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 30px;
  border-top: 1px solid rgba(7, 7, 7, 0.1);
}

.footer-social {
  display: flex;
  gap: 20px;
}

.social-link {
  color: #6BE03F;
  transition: all 0.3s ease;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: #070707;
  display: flex;
  align-items: center;
  justify-content: center;
}

.social-link:hover {
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(7, 7, 7, 0.2);
}

.footer-copyright {
  font-family: 'GeneralSans-Regular', sans-serif;
  font-size: 14px;
  color: #070707;
}

/* Responsive Design */
@media (max-width: 1200px) {
  .vpack-stats {
    gap: 60px;
  }
  
  .benefits-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }
}

/* iPad Responsive (1024px) - Horizontal tablet optimization */
@media (max-width: 1024px) and (min-width: 969px) {
  .container {
    padding: 0 clamp(25px, 4vw, 35px);
  }
  
  .vpack-hero-section {
    padding: clamp(60px, 10vh, 80px) 0 clamp(50px, 8vh, 70px) 0;
  }
  
  .vpack-main-title {
    font-size: clamp(48px, 8vw, 64px);
    line-height: 1.1;
  }
  
  .vpack-hero-description {
    font-size: clamp(18px, 3.5vw, 24px);
    max-width: 85%;
    margin: 0 auto;
  }
  
  .vpack-stats {
    gap: clamp(50px, 8vw, 70px);
    grid-template-columns: repeat(2, 1fr);
  }
  
  .stat-number {
    font-size: clamp(32px, 6vw, 42px);
  }
  
  .stat-label {
    font-size: clamp(14px, 2.5vw, 18px);
  }
  
  .benefits-section {
    padding: clamp(60px, 10vh, 80px) 0;
  }
  
  .benefits-title {
    font-size: clamp(32px, 6vw, 42px);
  }
  
  .benefits-description {
    font-size: clamp(16px, 3vw, 18px);
    max-width: 80%;
    margin: 0 auto;
  }
  
  .benefit-title {
    font-size: clamp(18px, 3.5vw, 22px);
  }
  
  .benefit-description {
    font-size: clamp(14px, 2.8vw, 16px);
  }
}

@media (max-width: 968px) {
  .container {
    padding: 0 20px;
  }
  
  .vpack-hero-section {
    padding: 70px 0 60px 0;
  }
  
  .vpack-main-title {
    font-size: 56px;
  }
  
  .vpack-hero-description {
    font-size: 20px;
  }
  
  .vpack-stats {
    gap: 40px;
  }
  
  .stat-number {
    font-size: 36px;
  }
  
  .benefits-grid {
    grid-template-columns: 1fr;
    gap: 30px;
  }
  
  .cta-buttons {
    flex-direction: column;
    align-items: center;
  }
  
  .footer-main {
    flex-direction: column;
    gap: 40px;
    text-align: center;
  }
  
  .footer-contact {
    flex-direction: column;
    gap: 30px;
  }
  
  .footer-bottom {
    flex-direction: column;
    gap: 20px;
  }
}

@media (max-width: 768px) {
  .vpack-main-title {
    font-size: 42px;
  }
  
  .vpack-hero-description {
    font-size: 18px;
  }
  
  .vpack-stats {
    flex-direction: column;
    gap: 30px;
  }
  
  .section-title {
    font-size: 36px;
  }
  
  .cta-title {
    font-size: 28px;
  }
  
  /* Footer Mobile Styles */
  .footer-section {
    margin-top: 60px;
    padding: 40px 0;
  }
  
  .footer-content {
    gap: 25px;
    padding: 0 15px;
    text-align: center;
